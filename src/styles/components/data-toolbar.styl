.data-toolbar
	padding-top    8px
	padding-bottom 8px
	direction rtl
	font-size 16px
	color #1b4792

	&.outer
		margin-bottom -34px

		@media (max-width: 700px)
			margin-bottom -21px

	@media (max-width: 700px)
		direction ltr

	&_align_center
		text-align center

	&::after
		content ""
		display table
		clear both

	&__item
		padding 8px 0
		margin-right 12px
		display inline-block
		vertical-align middle
		direction ltr

		&:first-child
			margin-right 0

		.modal-toolbar &
			margin-right 28px