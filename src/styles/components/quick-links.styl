.quick-link
	display inline-block
	vertical-align
	border 0
	text-decoration none
	color #898989
	transition .2s


	&__img
		display block
		width 100%
		max-width 100%
		height auto

	&:hover
		opacity .8

.quick-links
	margin 36px auto 16px
	display table
	border-collapse collapse
	vertical-align top
	padding 0
	overflow hidden
	list-style-type none
	text-align center

	&__item
		margin-left -1px
		margin-bottom 20px
		box-sizing border-box
		padding 0 36px
		display inline-block
		vertical-align middle
		min-height 80px
		border-left 1px solid #e5e5e5

		@media (max-width 980px)
			padding-top 10px
			padding-bottom 10px
			width 49%
			width calc(50% - 1px)
			text-align left

		@media (max-width 540px)
			width 99%
			width calc(100% - 1px)

