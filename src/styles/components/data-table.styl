/**
 * Таблицы с данными
 */

$head-cell
	background #ccc
	font-size 17px
	font-weight bold

.data-table-wrapper
	overflow auto

.data-table
	width 100%
	border-collapse collapse

	thead
		font-size 17px
		background #ccc

		th
		td
			@extends $head-cell
			box-sizing border-box

	tr
		&:nth-child(even)
			background-color #fff

	th
	td
		padding 12px 27px
		text-align left

	@media (max-width 700px)
		thead
			display none

		tbody
		tr
		th
		td
			display block

		tr
			position relative
			&::after
				content ""
				position absolute
				bottom 0
				left 0
				width 150px
				height 1px
				background #eff2f3

		th
		td
			position relative
			padding-left  162px
			padding-right 12px

			&[data-title]::before
				content attr(data-title)
				position absolute
				top 0
				bottom 0
				left 0
				box-sizing border-box
				width 150px
				@extends $head-cell
				padding 12px